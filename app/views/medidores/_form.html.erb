<%= form_with(model: medidor, local: true) do |form| %>
  <div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <% if medidor.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% medidor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="card-body">
      <h1 class="card-title text-center mb-4"><%= medidor.persisted? ? 'Editar Medidor' : 'Nuevo Medidor' %></h1>

      <div class="mb-3">
        <%= form.label :cliente_id, class: "form-label" %>
        <%= form.collection_select :cliente_id, Cliente.all, :id, :titulo, { include_blank: true }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :medidor, class: "form-label" %>
        <%= form.text_field :medidor, { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= form.label :sector, class: "form-label" %>
        <%= form.collection_select :sector, Medidor.sector_options, :to_s, :to_s, { include_blank: true }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :activo, class: "form-check-label" %>
        <%= form.check_box :activo, { class: "form-check-input" } %>
      </div>

      <div class="mb-3">
        <%= form.label :direccion, class: "form-label" %>
        <%= form.text_field :direccion, { class: "form-control" } %>
      </div>

      <div class="text-center">
        <%= form.submit "Guardar", class: "btn btn-primary w-50 mb-4" %>
      </div>

      <%= link_to 'Volver', medidores_path, class: "btn btn-outline-primary mb-4" %>
    </div>
  </div>
<% end %>
