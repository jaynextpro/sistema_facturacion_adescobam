<header>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <% if (@current_time >= WebsitePhase.starts_at && @current_time <= WebsitePhase.ends_at) %>
                <a href="/" class="d-flex"><%= image_tag "logo.svg", width: "64", height: "60" %></a>
            <% else %>
                <a target="_blank" href="https://www.lays.com/" class="d-flex"><%= image_tag "logo.svg", width: "64", height: "60" %></a>
            <% end %>
            <a target="_blank" href="https://www.snacks.com/all-snacks?brand=lay%27s" class="btn btn-secondary">Buy Now</a>
        </div>
        <% if WebsitePhase.enable_custom_datetime? %>
            <div class="d-flex justify-content-between align-items-center">
                <a href="javascript:;" class="modal-toggle" data-target="testModal" title="Open Test Modal" aria-label="Open Test Modal">
                    <%= image_tag "test_icon.png", style: "width: 50px; height: 50px; position: fixed; right: 25px; top: 25px;", alt: "Test Icon" %>
                </a>
            </div>
        <% end %>
    </div>
</header>